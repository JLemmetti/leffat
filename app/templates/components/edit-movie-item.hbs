<form {{action 'saveMovie' movie on='submit'}} class="edit-movie-item basic-container clearfix">

  {{#if movie.isNew}}
    <h2>Lisää uusi leffa</h2>
  {{else}}
    <h2>Muokkaa leffaa</h2>
  {{/if}}

  <div class="info">
    <label>Leffa{{input type="text" value=title}}</label>
    <label>Linkki{{input type="text" value=link}}</label>
      <label>Arvostelu
        <div  class="rating clearfix">
          <label><input type="radio" onclick={{action 'setRating' movie 'good'}}>Hyvä</label>
          <label><input type="radio" onclick={{action 'setRating' movie 'meh'}}>Meh</label>
          <label><input type="radio" onclick={{action 'setRating' movie 'bad'}}>Huono</label>
        </div>
      </label>
    <label>Huomiot{{textarea value=notes rows='5'}}</label>
  </div>

  <div class="calendar">
    {{pikaday-inputless
      options=(hash keyboardInput=false)
      value=movie.watchDate
      onSelection=(action (mut movie.watchDate))
    }}
  </div>

  <div class="actions">
    <input type="submit" value="Tallenna">
    {{#unless movie.isNew}}
      <button {{action 'deleteMovie' movie}} class="delete">Poista</button>
    {{/unless}}
    <button {{action 'cancelEdit' movie}}>Peruuta</button>
  </div>


</form>